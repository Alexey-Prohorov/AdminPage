
@model AdminPage.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование данных</title>
</head>
<body>
    <form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.id">
        <div>
            <div>
                <label asp-for="name">Имя:</label><br />
                <input type="text" asp-for="name" />
                <span asp-validation-for="name"></span>
            </div>
            <div>
                <label asp-for="surname">Фамилия:</label><br />
                <input type="text" asp-for="surname" />
                <span asp-validation-for="surname"></span>
            </div>
            <div>
                <label asp-for="patronymic">Отчество:</label><br />
                <input type="text" asp-for="patronymic" />
                <span asp-validation-for="patronymic"></span>
            </div>
            <div>
                <label asp-for="login">Логин:</label><br />
                <input type="text" asp-for="login" />
                <span asp-validation-for="login"></span>
            </div>
            <div>
                <label asp-for="password">Пароль:</label><br />
                <input type="password" asp-for="password" />
                <span asp-validation-for="password"></span>
            </div>
            <div>
                <label asp-for="mail">Почта:</label><br />
                <input type="email" asp-for="mail" />
                <span asp-validation-for="mail"></span>
            </div>
            <div>
                <label asp-for="birthday">Дата рождения:</label><br />
                <input type="date" asp-for="birthday" />
                <span asp-validation-for="birthday"></span>
            </div>
            <div>
                <label asp-for="sex">Пол:</label><br />
                <input type="radio" asp-for="sex" value="Мужской" />
                <span>Мужской</span><br />
                <input type="radio" asp-for="sex" value="Женский" />
                <span>Женский</span>
            </div>
        </div>
        <input type="submit" value="Сохранить" />
    </form>
</body>
</html>
